@using MicCRM.Models.StudentViewModels
@model IEnumerable<StudentInfoViewModel>
@{
    ViewData["Title"] = "AllStudents";
    int index = 1;
}
<div class="limiter">
    <div class="container-table100">

        <h2>Students</h2>
        <div class="table100 ver2 m-b-110">
            <table data-vertable="ver2">
                <thead>
                    <tr class="row100 head">
                        <th class="column100 column1" data-column="column1"></th>
                        <th class="column100 column2" data-column="column2">First Name</th>
                        <th class="column100 column3" data-column="column3">Last Name</th>
                        <th class="column100 column4" data-column="column4">Phone Number</th>
                        <th class="column100 column5" data-column="column5">Phone Number</th>
                        <th class="column100 column6" data-column="column6">Email</th>
                        <th class="column100 column7" data-column="column7">Date</th>
                        <th class="column100 column8" data-column="column8">Description</th>
                        <th class="column100 column9" data-column="column9">X</th>
                        <th class="column100 column10" data-column="column10">Y</th>
                        <th class="column100 column11" data-column="column11">Z</th>
                        <th class="column100 column12" data-column="column12">Lesson</th>

                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 15; i++)
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="row100">
                                <td class="column100 column1" data-column="column1">@index</td>
                                <td class="column100 column2" data-column="column2">@item.FirstName</td>
                                <td class="column100 column3" data-column="column3">@item.LastName</td>
                                <td class="column100 column4" data-column="column4">@item.Phone1</td>
                                <td class="column100 column5" data-column="column5">@item.Phone2</td>
                                <td class="column100 column6" data-column="column6">@item.Email</td>
                                <td class="column100 column7" data-column="column7">@item.Date.ToShortDateString()</td>
                                <td class="column100 column8" data-column="column8">@item.Description</td>
                                <th class="column100 column9" data-column="column9">@item.X</th>
                                <th class="column100 column10" data-column="column10">@item.Y</th>
                                <th class="column100 column11" data-column="column11">@item.Z</th>
                                <td class="column100 column12 tableBtn" data-column="column12"><a href="#">@Html.HiddenFor(a => item.Id)Lessons</a></td>
                            </tr>
                            <tr class="row100 hide">
                                <td class="column100 column9" data-column="column9">@index</td>
                                <td class="column100 column1" data-column="column1">@item.FirstName</td>
                                <td class="column100 column2" data-column="column2">@item.LastName</td>
                                <td class="column100 column3" data-column="column3">@item.Phone1</td>
                                <td class="column100 column4" data-column="column4">@item.Phone2</td>
                                <td class="column100 column5" data-column="column5">@item.Email</td>
                                <td class="column100 column6" data-column="column6">@item.Date.ToShortDateString()</td>
                                <td class="column100 column7" data-column="column7">@item.Description</td>
                                <th class="column100 column8" data-column="column8">@item.X</th>
                                <th class="column100 column10" data-column="column10">@item.Y</th>
                                <th class="column100 column11" data-column="column11">@item.Z</th>
                                <td class="column100 column12 tableBtn" data-column="column12"><a href="#">@Html.HiddenFor(a => item.Id)Lessons</a></td>
                            </tr>
                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

