@using MicCRM.Models.ApplicantViewModels
@model ApplicantExcelUploadViewModel
@{
    ViewData["Title"] = "UploadExcel";
}

<h2>Upload Excel</h2>

<form method="post" enctype="multipart/form-data" asp-controller="File" asp-action="UploadExcel">
    <div class="form-group">
        <div>
            <p>Upload excel file</p>
            <input type="file" name="excelFile" accept=".xls,.xlsx" />
        </div>
    </div>
    <div class="form-group">
        <label>Lessons</label>
        <select class="selection-2 form-control" asp-for="LessonId" asp-items="(IEnumerable<SelectListItem>)Model.Lessons">
            <option value="0">Select Lesson</option>
        </select>
    </div>
    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-default form-group">Upload</button>
        </div>
    </div>
</form>

