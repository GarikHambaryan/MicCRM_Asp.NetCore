@using MicCRM.Models.TechnologyViewModels
@model IEnumerable<TechnologyInfoViewModel>
@{
    ViewData["Title"] = "AllTechnologies";
}

<h2>Technologies</h2>
<form asp-action="Add" asp-controller="Technology" method="get">
    <button class="btn btn-default">Add</button>
</form>

<div class="limiter">
    <div class="container-table100">
        <div class="table100 ver2 m-b-110">
            <table data-vertable="ver2">
                <thead>
                    <tr class="row100 head">
                        <th class="column100 column2" data-column="column2">Name</th>
                        <th style="max-width: 10px" class="column100 column3" data-column="column3">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row100">
                            <td class="column100 column2" data-column="column2">@item.Name</td>
                            <td style="max-width: 10px" class="column100 column3" data-column="column3">
                                <a href="#">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
